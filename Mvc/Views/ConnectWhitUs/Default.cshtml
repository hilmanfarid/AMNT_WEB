<section class="connect">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" data-grid="clear">
            <div class="text">
                <h1 align="center">Connect With Us</h1>
            </div>
        </div>
        <div class="col-md-12" data-grid="clear">
            <div class="col-md-3 col-sm-6 col-xs-12 wow slideInUp">
                <div class="card card-home card-animation-move">
                    <div class="member-thumb">
                        <div class="card-image">
                            <img class="img-responsive" id="facebookImage">
                            <div class="col-sosmed">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </div>
                        </div>
                        <div class="card-text">
                            <p id ="facebookText"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 wow slideInUp" data-wow-delay="0.1s">
                <div class="card card-home card-animation-move">
                    <div class="member-thumb">
                        <div class="card-image">
                            <img class="img-responsive" id="instagramImage">
                        </div>
                        <div class="card-text">
                            <p id="instagramText"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 wow slideInUp" data-wow-delay="0.2s">
                <div class="card card-home card-animation-move">
                    <div class="member-thumb">
                        <div class="card-image">
                            <img class="img-responsive" id="twitterImage">
                        </div>
                        <div class="card-text">
                            <p id="twitterText"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 wow slideInUp" data-wow-delay="0.3s">
                <div class="card card-home card-animation-move">
                    <div class="member-thumb">
                        <div class="card-image">
                            <img class="img-responsive" id="linkedinImage">
                        </div>
                        <div class="card-text">
                            <p id="linkedinText"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    var facebookImage = "Uploads//banner-btm.jpg";
    var facebookText = "Facebook goes here ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet";
    var instagramImage = "Uploads/connect-instagram.jpg";
    var instagramText = "Instagram goes here ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet";
    var twitterImage = "Uploads/connect-twitter.jpg";
    var twitterText = "Tweet goes here ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet";
    var linkedinImage = "Uploads/bg-img2.jpg";
    var linkedinText = "Linkedin goes here ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet";

    setConnectWhitUs();

    function setConnectWhitUs() {
        $.ajax({
            type: 'GET',
            url: "@System.Configuration.ConfigurationManager.AppSettings["ApiUrl"]" + "connectwhitus/getconnectwhitus",
            async: false,
            success: function (result) {
                //console.log(result);
                if (result[0].content != null)
                    facebookImage = result[0].content;
                if (result[1].content != null)
                    facebookText = result[1].content;

                if (result[2].content != null)
                    instagramImage = result[2].content;
                if (result[3].content != null)
                    instagramText = result[3].content;

                if (result[4].content != null)
                    twitterImage = result[4].content;
                if (result[5].content != null)
                    twitterText = result[5].content;

                if (result[6].content != null)
                    linkedinImage = result[6].content;
                if (result[7].content != null)
                    linkedinText = result[7].content;

                $("#facebookImage").prop("src", "@System.Configuration.ConfigurationManager.AppSettings["ApiUrl"]" + facebookImage);
                $("#facebookText").html(facebookText);

                $("#instagramImage").prop("src", "@System.Configuration.ConfigurationManager.AppSettings["ApiUrl"]" + instagramImage);
                $("#instagramText").html(instagramText);

                $("#twitterImage").prop("src", "@System.Configuration.ConfigurationManager.AppSettings["ApiUrl"]" + twitterImage);
                $("#twitterText").html(twitterText);

                $("#linkedinImage").prop("src", "@System.Configuration.ConfigurationManager.AppSettings["ApiUrl"]" + linkedinImage);                
                $("#linkedinText").html(linkedinText);
                
            }
        });


    }

</script>